<div class="album-view">
	<h1>Details</h1>
	<div class="wrapper">
		<div class="image">
			<img src="{{ img }}" />
			<input class="imageButton" type="file"></input>
		</div>
		<form class="Details">
			<h5>Title</h5><input class="AlbumTitle" type="text" name="title">
			<h5>Artist</h5><input class="Artist" type="text" name="artist">
			<h5>Description</h5><input class="Description" type="text" value="Enter album description..." name="description">
			<button class="SaveAlbum" type="button">Save Album</button>
		</form>
	</div>

	<form class="Tracks">
		<div class="input-container">
			<div class="input-item order">
				<h5>Order</h5>
				<input type="text" name="order">
			</div>
			<div class="input-item name">
				<h5>Track Title</h5>
				<input type="text" name="trackTitle">
			</div>
			<div class="input-item duration">
				<h5>Duration</h5>
				<input type="text" name="duration">
			</div>
			<div class="input-item button">
				<button class="SaveTrack" type="button">Save Track</button>
			</div>
		</div>	
	</form>
</div>
